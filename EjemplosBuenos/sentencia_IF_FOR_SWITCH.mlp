#Se inicializan variables
set a 1
set b 2
set c [expr $a + $b]

#Ejemplo de _if
if {$a > 0} {
	
	#Ejemplo de _for
	for {set x 0} {$x < $c} {incr i} {
		puts "El valor de x es $x"
	}	
	

	#Ejemplo de _switch
	switch x {
		"1" {
			puts "Uno"
		}
		"2" {
			puts "Dos"
		}
		"3" {
			puts "Tres"
		}
		default {
			puts "El numero es mayor que tres"
		}

	}
}